<%- include('../layout/header.ejs') %>
<%- include('../layout/aside.ejs') %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>Thông tin chi tiết nhập hàng</h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
      <li><a href="#">Examples</a></li>
      <li class="active">Blank page</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <% if (data.length > 0) { %>
      <% data.forEach((item) => { %>
        <div class="box">
          <div class="box-body">
            <div class="row">
              <div class="col-md-2">
                <img src="<%= item.UrlImages %>" alt="<%= item.ProductName %>" style="width: 100px;">
              </div>
              <div class="col-md-10">
                <p><strong>IDImportedProducts:</strong> <%= item.IDImportedProducts %></p>
                <p><strong>IDProduct:</strong> <%= item.IDProduct %></p>
                <p><strong>ProductName:</strong> <%= item.ProductName %></p>
                <p><strong>SupplierName:</strong> <%= item.SupplierName %></p>
                <p><strong>Price:</strong> <%= (item.Price * 23000).toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></p>
                <p><strong>Quantity:</strong> <%= item.Quantity %></p>
                <p><strong>InputPrice:</strong> <%= item.InputPrice %></p>
                <p><strong>Total Input:</strong> <%= ((item.Quantity * item.InputPrice) * 23000).toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></p>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="box">
        <div class="box-body">
          <p>Không có dữ liệu</p>
        </div>
      </div>
    <% } %>
    <a href="/admin/v1/importeddetail" class="btn btn-default"><i class="fa fa-arrow-left"></i> Trở lại</a>
  </section>
</div>

<%- include('../layout/footer.ejs') %>